{
    "name": "your-org/your-project",
    "type": "project",
    "require": {
        "php": ">=8.2"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.12",
        "friendsofphp/php-cs-fixer": "^3.64",
        "phpunit/phpunit": "^11.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "analyse": "phpstan analyse",
        "fix": "php-cs-fixer fix",
        "check": "php-cs-fixer fix --dry-run --diff",
        "guardian": "php scripts/guardian.php",
        "test": "phpunit",
        "lint": [
            "@guardian",
            "@analyse",
            "@check"
        ]
    },
    "config": {
        "sort-packages": true
    }
}
